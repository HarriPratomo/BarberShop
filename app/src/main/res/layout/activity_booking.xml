<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">
    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:sv_selectedCircleColor="#0713F1"
        app:sv_selectedTextColor="#000"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="4dp"
        app:sv_nextTextColor="@color/transparent"
        app:sv_nextStepLineColor="@color/background"
        app:sv_doneCircleColor="#E91E63"
        app:sv_doneStepLineColor="#E91E63"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/white"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_doneStepMarkColor="@color/white"
        app:sv_stepNumberTextSize="12sp"
        app:sv_animationType="None"
        app:sv_typeface="@font/gilroy_regular"/>
    <com.example.barbershop.Common.NonSwipeViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        android:layout_above="@+id/layout_button"
        android:layout_below="@+id/step_view"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/layout_button">
        <Button
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_previous_step"
            android:text="Previous"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"/>
        <Button
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_next_step"
            android:text="Next"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>